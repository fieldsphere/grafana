{
  "name": "hydrogen-storefront-e2e",
  "version": "1.0.0",
  "description": "Playwright E2E tests for Hydrogen storefront cart, account, and checkout flows",
  "scripts": {
    "test": "playwright test",
    "test:cart": "playwright test --project=cart",
    "test:account": "playwright test --project=account-unauthenticated --project=account-authenticated",
    "test:checkout": "playwright test --project=checkout-guest --project=checkout-authenticated",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:headed": "playwright test --headed",
    "codegen": "playwright codegen"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
